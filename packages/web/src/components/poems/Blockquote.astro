---
import { css } from "@styled-system/css";
---

<style>
  blockquote {
    quotes: "\201C" "\201D";
  }
</style>
<blockquote
  class={css({
    opacity: "0.5",
    margin: 4,
    fontSize: "sm",
    "& p::before": {
      content: 'open-quote',
    },
    "& > p": {
      fontSize: "sm",
    }
  })}
>
  <slot />
</blockquote>
